<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <Button android:layout_width="270dp" android:layout_height="wrap_content"
            android:text="历史记录" android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:id="@+id/history_btn"
    />

    <Button android:layout_width="270dp" android:layout_height="wrap_content"
            android:text="我的收藏" android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@id/history_btn"
            android:id="@+id/collect_btn"
    />
    <Button android:layout_width="270dp" android:layout_height="wrap_content"
            android:text="清除缓存" android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@id/collect_btn"
            android:id="@+id/clean_btn"
    />

</RelativeLayout>